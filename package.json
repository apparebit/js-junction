{
  "name": "js-junction",
  "private": true,
  "version": "6.6.5",
  "description": "@grr's monorepo for all things JavaScript",
  "repository": "https://github.com/apparebit/js-junction",
  "author": "Robert Grimm",
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "devDependencies": {
    "chalk": "2.4.1",
    "eslint": "4.19.1",
    "esm": "3.0.31",
    "nyc": "11.7.3",
    "rimraf": "2.6.2",
    "tap": "11.1.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "nyc": {
    "clean": false,
    "require": [
      "esm"
    ],
    "cwd": "packages",
    "temp-directory": "../.nyc_output",
    "report-dir": "../coverage",
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "text",
      "html"
    ]
  },
  "scripts": {
    "clean": "node scripts/clean-without-esm.js",
    "pretest": "node scripts/clean.js --deep && eslint .",
    "test": "tap --node-arg=-r --node-arg=esm scripts/test.js",
    "posttest": "node scripts/clean.js && nyc node scripts/test.js --no-tap"
  }
}

{
  "name": "js-junction",
  "private": true,
  "version": "6.6.5",
  "description": "@grr's monorepo for all things JavaScript",
  "repository": "https://github.com/apparebit/js-junction",
  "author": "Robert Grimm",
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "devDependencies": {
    "eslint": "4.18.2",
    "esm": "3.0.4",
    "nyc": "11.6.0",
    "rimraf": "2.6.2",
    "tap": "11.1.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "nyc": {
    "clean": false,
    "require": [
      "esm"
    ],
    "cwd": "packages",
    "temp-directory": "../.nyc_output",
    "report-dir": "../coverage",
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "text",
      "html"
    ]
  },
  "scripts": {
    "clean": "node -r esm scripts/clean.js",
    "pretest": "node -r esm scripts/clean.js && eslint .",
    "test": "tap --node-arg=-r --node-arg=esm tests/*.test.js",
    "posttest": "nyc node tests/index.js --quiet"
  }
}
